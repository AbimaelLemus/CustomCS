<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appearanceTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="rating_bar" parent="Theme.CustomCS.NoActionBar">
        <item name="colorControlNormal">@color/gris</item>
        <item name="colorControlActivated">@color/amarillo</item>
    </style>

    <style name="btn_Comprar" parent="Theme.CustomCS.NoActionBar">
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/d16</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="btnCarrito" >
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableStart">@drawable/ic_carrito</item>
        <item name="android:layout_margin">@dimen/d16</item>
        <item name="android:background">@color/gris</item>
        <item name="android:textColor">@color/negro</item>
    </style>

</resources>